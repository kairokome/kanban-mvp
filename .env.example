# Kanban MVP Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DB_PATH=./kanban.db

# Authentication
# Owner password for web UI access (via x-owner-password header)
OWNER_PASSWORD=kanban123

# Agent API Authentication
# API key for agent endpoints (via x-api-key header)
AGENT_API_KEY=agent-secret-key-12345

# Manager Poller Configuration (Optional - for Discord notifications)
# Discord webhook URL for task summaries
DISCORD_WEBHOOK_URL=

# Poll interval in seconds (default: 300 = 5 minutes)
POLL_INTERVAL_SECONDS=300

# Kanban API base URL (default: http://localhost:3000)
KANBAN_BASE_URL=http://localhost:3000

# Optional: Owner password (for backward compatibility)
# OWNER_PASSWORD=kanban123

# Docker-specific (used in docker-compose.yml)
# DATA_PATH=/app/data
