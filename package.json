{
  "name": "kanban-mvp",
  "version": "1.1.21",
  "description": "Self-hosted Kanban board with PostgreSQL/SQLite persistence",
  "main": "server.js",
  "bin": {
    "agent-cli": "./bin/agent-cli.js"
  },
  "scripts": {
    "build": "echo 'No build step required for Node.js server'",
    "start": "node server.js",
    "dev": "node server.js",
    "poller": "node poller.js",
    "poller:test": "node poller.js --test",
    "cli": "node bin/agent-cli.js",
    "link-cli": "npm link",
    "migrate": "node migrate.js",
    "migrate:pg": "DATABASE_URL=$DATABASE_URL node migrate.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.18.0",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
